{
  "name": "cypress-automation-framework",
  "version": "1.0.0",
  "description": "Cypress Automation Framework",
  "main": "index.js",
  "scripts": {
    "runalltests-headed": "npx cypress run --headed",
    "runalltests-webunittest": "npx cypress run --spec cypress/integration/webUniTest/*",
    "delete-all-junit-reports": "rm cypress/results/junit/* || true",
    "delete-all-reports": "rm cypress/results/* || true",
    "merge-junit": "npx junit-merge -d cypress/results/junit -o cypress/results/junit/results.xml",
    "delete-junit-merge-report": "rm cypress/results/junit/results.xml || true",
    "combine-reports": "jrm cypress/results/junit/combined-report.xml \"cypress/results/junit/*.xml\"",
    "report": "cypress run --reporter cypress-multi-reporters --reporter-options configFile=reporter-config.json",
    "merge-mocha": "npx mochawesome-merge cypress/results/mochawesome/*.json > mochawesome.json && npx marge mochawesome.json",
    "delete-mocha-report": "rm -rf mochawesome-report/* || true",
    "prerun" : "npm run delete-all-reports && npm run delete-mocha-report",
    "staging-open" : "npx cypress open --config-file cypress/config/staging.json"
  },
  "author": "Vivek Anbalagan",
  "license": "ISC",
  "devDependencies": {
    "cypress": "^8.7.0",
    "cypress-multi-reporters": "^1.5.0",
    "mocha": "^9.1.3",
    "mocha-junit-reporter": "^2.0.2",
    "mochawesome": "^7.0.1",
    "mochawesome-merge": "^4.2.0",
    "mochawesome-report-generator": "^6.0.1"
  },
  "dependencies": {
    "cypress-iframe": "^1.0.1",
    "D": "^1.0.0"
  }
}
